<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             x:Class="BarSummaryOnSelectionExample.InfoIconElement">
    <VerticalStackLayout x:Name="rootPanel">
        <dxco:DXImage Source="{Binding Image}" HorizontalOptions="Center" HeightRequest="36"/>
        <Label Text="{Binding Value}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" Style="{StaticResource normalLabel}"/>
        <Label Text="{Binding Description}" HorizontalOptions="Center" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" Style="{StaticResource normalLabel}"/>
    </VerticalStackLayout>
</ContentView>
